import capos.*

test "conocer valor base de lucha de Rolando" {

	assert.equals(3, rolando.lucha())

}

test "conocer valor base de hechiceria de Rolando" {

	assert.equals(1, rolando.hechiceria())
}

test "incrementar en 1 el valor base de lucha de Rolando" {
	rolando.incLucha()
	assert.equals(4, rolando.lucha())
}

test "incrementar en 1 el valor base de hechiceria de Rolando" {
	rolando.incHechiceria()
	assert.equals(2, rolando.hechiceria())
}

test "obtener varios artefactos" {
	rolando.obtenerArtefacto(espadaDelDestino)
	assert.equals(1, rolando.hechiceria())
	assert.equals(6, rolando.lucha())	
	rolando.obtenerArtefacto(collarDivino)
	assert.equals(2, rolando.hechiceria())
	assert.equals(7, rolando.lucha())	
	rolando.obtenerArtefacto(libroDeHechizos)
	assert.equals(4, rolando.hechiceria())
	assert.equals(7, rolando.lucha())	
}

test "obtener cota de malla" {
	rolando.obtenerArtefacto(armadura)    
    armadura.obtenerRefuerzo(cotaDeMalla)
    assert.equals(1, rolando.hechiceria())
    assert.equals(4, rolando.lucha())                  
}

test "obtener armadura y bendicion" {  
	rolando.obtenerArtefacto(armadura)
    armadura.obtenerRefuerzo(bendicion)
    assert.equals(4, armadura.hechiceria())
    assert.equals(3, armadura.ptosLucha())             
}

test "obtener armadura y hechizo" {    
    rolando.obtenerArtefacto(armadura)
    armadura.obtenerRefuerzo(hechizo)   
    assert.equals(3, rolando.hechiceria())
	assert.equals(1, rolando.lucha())	         
}

test "mejor artefato de espejo fantastico" {
	rolando.obtenerArtefacto(espejoFantastico)
	espejoFantastico.refuerzosDisponibles(espadaDelDestino)
	espejoFantastico.refuerzosDisponibles(libroDeHechizos)
	espejoFantastico.refuerzosDisponibles(collarDivino)
	assert.equals(espejoFantastico.mejorArtefacto(rolando), espadaDelDestino)
	}